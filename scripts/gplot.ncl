    useLatDimv=False
    vselect=""
    array4=field_reduce(v_file, v_var, y, useXY_dummy, horizontal_dummy, useLatDimv, vprofile_dummy, vselect, lat_exist_dummy, lon_exist_dummy, tz_profile_dummy)

    fld4=array4[0]
